@using ThucHanhWebMVC.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>
@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h4 class="card-title">Danh Mục Sản Phẩm</h4>
<div class="card">
    <div class="card-body">
        <button class="btn btn-gradient-success btn-lg">
            <a asp-action="ThemSanPhamMoi">Create New</a>
        </button>
        <p>@TempData["Message"]</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Tên Sản Phẩm
                    </th>
                    <th>
                        Cân Nặng
                    </th>
                    <th>
                        Đồ Nội
                    </th>
                    <th>
                        Thời Gian Bảo Hành
                    </th>
                    <th>
                        Chiết Khấu
                    </th>

                    <th>
                        Giá Nhỏ Nhất
                    </th>
                    <th>
                        Giá Lớn Nhất
                    </th>

                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>


            <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                                @Html.DisplayFor(modelItem => item.TenSp)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.CanNang)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.DoNoi)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.ChietKhau)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.GiaNhoNhat)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.GiaLonNhat)
                        </td>
                        <td>
                            <button class="btn btn-gradient-dark btn-icon-text"> <a asp-action="SuaSanPham" asp-route-maSanPham="@item.MaSp">Edit</a> </button>
                            <button class="btn btn-gradient-info"><a asp-action="Details" asp-route-id="@item.MaSp">Details</a> </button>
                            <button class="btn btn-gradient-danger"><a asp-action="XoaSanPham" asp-route-maSanPham="@item.MaSp">Delete</a></button>
                          
                        </td>
                    </tr>
                    }
            </tbody>

        </table>
        <div class="product__pagination">
            @Html.PagedListPager(
                     Model,
                     page => Url.Action("DanhMucSanPham", new { page = page }),
                     new PagedListRenderOptions
            {
                LiElementClasses = new[] { "page-item" }, // Set the class for <li> elements
                PageClasses = new[] { "page-link" } // Set the class for page link <a> elements
            })
        </div>



    </div>
</div>
